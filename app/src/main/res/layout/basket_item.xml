<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/list_layout"
    android:background="@drawable/rounded_corner_item"
    >

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="140dp"
        android:layout_height="120dp"
        />

    <LinearLayout
        android:layout_toEndOf="@id/ivPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_toStartOf="@id/ivCheck"
        >
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:text="@string/first_text"
            android:textColor="@color/itemColorText"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvPrice"
            android:textColor="@color/itemColorText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/second_text"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/x_image"
        />
</RelativeLayout>